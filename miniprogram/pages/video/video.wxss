/* video.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 搜索栏 */
.search-bar {
  position: relative;
  margin: 30rpx 24rpx 20rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.search-icon {
  font-size: 36rpx;
  color: #1A5AA0;
}

/* 分类标签栏 */
.category-scroll {
  display: flex;
  white-space: nowrap;
  padding: 20rpx 20rpx 20rpx 24rpx;
}

.category-item {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin-right: 18rpx;
  background: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.2;
  transition: all 0.3s;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.category-item.active {
  background: linear-gradient(90deg, #1A5AA0, #4DACFF);
  color: #fff;
  font-weight: 500;
  box-shadow: 0 4rpx 8rpx rgba(26, 90, 160, 0.2);
}

/* 视频网格 */
.video-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 10rpx 24rpx 40rpx;
}

.video-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease;
}

.video-item:active {
  transform: scale(0.98);
}

.video-thumb-container {
  position: relative;
  width: 100%;
  height: 200rpx;
}

.video-thumb {
  width: 100%;
  height: 100%;
  background-color: #eef2f9;
}

.video-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: #FFD600;
  color: #1A5AA0;
  font-size: 22rpx;
  font-weight: bold;
  padding: 4rpx 14rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.video-duration {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.video-info {
  padding: 16rpx;
}

.video-title {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 上传按钮 */
.upload-button {
  position: fixed;
  right: 30rpx;
  bottom: 140rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1A5AA0, #4DACFF);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(26, 90, 160, 0.3);
  z-index: 100;
}

.upload-icon {
  color: #fff;
  font-size: 50rpx;
  font-weight: bold;
}

/* 底部导航栏 */
.navbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 99;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 0;
}

.nav-icon {
  font-size: 44rpx;
  margin-bottom: 6rpx;
}

.nav-text {
  font-size: 22rpx;
  color: #999;
}

.nav-item.active .nav-text {
  color: #1A5AA0;
  font-weight: 500;
} 