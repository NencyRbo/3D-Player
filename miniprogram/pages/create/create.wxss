/* create.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 顶部标题栏 */
.header {
  padding: 30rpx 40rpx;
  background: #fff;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 创作类型选择 */
.creation-types {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background: #fff;
  margin-top: 20rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 30%;
  padding: 20rpx 0;
  border-radius: 12rpx;
  background: #f9f9f9;
  transition: all 0.3s;
}

.type-item.active {
  background: linear-gradient(135deg, #1A5AA0, #4DACFF);
  box-shadow: 0 4rpx 12rpx rgba(26, 90, 160, 0.2);
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.type-name {
  font-size: 26rpx;
  color: #333;
}

.type-item.active .type-name {
  color: #fff;
}

/* 输入区域 */
.input-section {
  margin-top: 20rpx;
  padding: 30rpx 40rpx;
  background: #fff;
}

.input-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  margin-top: 30rpx;
}

.input-title:first-child {
  margin-top: 0;
}

.description-input {
  width: 100%;
  height: 180rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

/* 风格选择 */
.style-scroll {
  display: flex;
  white-space: nowrap;
  margin-bottom: 30rpx;
}

.style-item {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin-right: 16rpx;
  background: #f9f9f9;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #333;
}

.style-item.active {
  background: linear-gradient(90deg, #1A5AA0, #4DACFF);
  color: #fff;
}

/* 上传区域 */
.upload-area {
  width: 100%;
  height: 240rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.reference-image {
  width: 100%;
  height: 100%;
}

/* 创建按钮 */
.create-button {
  margin: 40rpx 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(90deg, #1A5AA0, #4DACFF);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  box-shadow: 0 6rpx 16rpx rgba(26, 90, 160, 0.2);
}

/* 历史创作 */
.history-section {
  padding: 30rpx 40rpx;
  background: #fff;
  margin-top: 20rpx;
}

.history-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.history-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.history-item {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f9f9f9;
}

.history-thumb {
  width: 100%;
  height: 200rpx;
}

.history-info {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 8rpx 12rpx;
  background: rgba(0, 0, 0, 0.5);
}

.history-date {
  font-size: 22rpx;
  color: #fff;
}

/* 底部导航栏 */
.navbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 99;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 0;
}

.nav-icon {
  font-size: 44rpx;
  margin-bottom: 6rpx;
}

.nav-text {
  font-size: 22rpx;
  color: #999;
}

.nav-item.active .nav-text {
  color: #1A5AA0;
  font-weight: 500;
} 